<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
"

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <CheckBox
        android:id="@+id/crime_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:padding="4dp" />

    <TextView
        android:id="@+id/crime_list_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/crime_list_item_checkbox"
        android:layout_alignBottom="@+id/crime_list_item_checkbox"
        android:layout_toRightOf="@+id/linearLayout1"
        android:text="@string/crime_list_title_textview" />

    <TextView
        android:id="@+id/crime_list_title_dateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/crime_list_item_checkbox"
        android:text="@string/crime_list_title_dateview" />

</RelativeLayout>